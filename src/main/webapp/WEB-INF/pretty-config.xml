	<url-mapping id="index">
		<pattern value="/" />
		<view-id value="/faces/index.xhtml" />
	</url-mapping>
        
        <url-mapping id="dataset">
		<pattern value="/dataset" />
		<view-id value="/faces/datasets/dataset.xhtml" />
